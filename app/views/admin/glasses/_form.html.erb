<% if @glasses.errors.any? %>
<div id="errorExplanation">
  <h2><%= pluralize(@glasses.errors.count, "error") %> Ha sido imposible almacenar estas gafas:</h2>
  <ul>
    <% @glasses.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
<p><label for="glasses_glasses_name">Nombre</label><br/>
<%= text_field 'glasses', 'glasses_name' %></p>
</div>

<div class="field">
<p><label for="glasses_price">Precio</label><br/>
<%= text_field 'glasses', 'price' %></p>
</div>

<div class="field">
<p><label for="glasses_image">Imagen</label><br/>
<% if @glasses.image.exists? then %>
  <dd><%= image_tag @glasses.image.url %></dd>
<% else %>
  <p> Introduce una imagen de las gafas. </p>
<% end %>
<%= file_field 'glasses', :image %></p>
</div>

<div class="field">
  <p><label for="glasses_manufacturer">Fabricantes</label><br/>
  <%= collection_select :glasses, :manufacturer_id, @manufacturers, :id, :company_name %></p>
</div>

<div class="field">
<p><label for="glasses_description">Descripci√≥n</label><br/>
<%= text_field 'glasses', 'description' %></p>
</div>
